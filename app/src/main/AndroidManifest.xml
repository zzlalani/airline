<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zeeshanlalani.airline">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginUserActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RegisterUserActivity"
            android:label="@string/title_activity_register"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SearchFlightActivity"
            android:label="@string/title_activity_search"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ViewFlightListActivity"
            android:label="@string/title_activity_flights"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ViewFlightActivity"
            android:label="@string/title_activity_book_flight"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ViewBookingListActivity"
            android:label="@string/title_activity_view_booking_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ViewBookingActivity"
            android:label="@string/title_activity_view_booking"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ViewProfileActivity"
            android:label="@string/title_activity_view_profile"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ViewFeedbackActivity"
            android:label="@string/title_activity_view_feedback"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>
    <uses-permission android:name="android.permission.INTERNET" />
</manifest>
